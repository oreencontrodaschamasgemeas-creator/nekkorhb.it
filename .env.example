# Application
NODE_ENV=development
PORT=3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=backend_db

# JWT / OAuth
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d
JWT_ROTATION_INTERVAL_MS=86400000
# Optional: provide existing RSA keys (PEM) when running in production
# JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
# JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"
AUTH_DASHBOARD_CLIENT_ID=dashboard-client
AUTH_DASHBOARD_CLIENT_SECRET=dashboard-secret
AUTH_DASHBOARD_REDIRECT_URI=http://localhost:3000/oauth/callback
AUTH_MOBILE_CLIENT_ID=mobile-client
AUTH_MOBILE_CLIENT_SECRET=mobile-secret
AUTH_MOBILE_REDIRECT_URI=mobile://oauth/callback
AUTH_PARTNER_CLIENT_ID=partner-client
AUTH_PARTNER_CLIENT_SECRET=partner-secret

# Redis (for Bull Queue)
REDIS_HOST=localhost
REDIS_PORT=6379

# WebSocket
WS_PORT=3001
